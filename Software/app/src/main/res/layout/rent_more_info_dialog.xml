<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:id="@+id/fl_dialog_more_info"
    tools:context=".fragments.PaidRentFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tenant name:"
                android:textAllCaps="true"
                android:paddingEnd="10dp"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/tv_rent_info_tenant_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="John Doe"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Phone number:"
                android:textAllCaps="true"
                android:paddingEnd="10dp"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/tv_rent_info_phone_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/test_year_number"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/flat_address_label"
                android:textAllCaps="true"
                android:paddingEnd="10dp"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/tv_rent_info_flat_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/text_address_value"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/month_and_year_to_be_paid_label"
                android:textAllCaps="true"
                android:paddingEnd="10dp"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/tv_rent_info_month_year"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/text_address_value"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>